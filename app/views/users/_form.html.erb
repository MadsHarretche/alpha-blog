<head>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

</head>

<div class="container register">
    <div class="row">
       <div class="col-md-3 register-left">
          <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
          <h3>Welcome</h3>
          <p>You are 30 seconds away from earning your own money!</p>
          
          <a class="btnLogin" href="/login">Log in</a> 
          
       </div>
                    
        <div class="col-md-9 register-right">
          
          <h1 class="register-heading">Sign up and read amazing articles</h1>
          <%= render 'shared/errors', obj: @user %>
          <div class="container register-form">
              <div class="form">
                
                
                
                  <%= form_with(model: @user, local: true) do |f| %>
                    <div class="col-md-6">
                    
                      <div class="form-group">
                        <%= f.text_field :username, class:"form-control", placeholder: "Username *" %>
                      </div>
                      
                      <div class="form-group">
                        <%= f.email_field :email, class:"form-control", placeholder: "Email address *" %>
                      </div>
                    </div>
                          
                    <div class="col-md-6">
                      
                        <div class="form-group">
                          <%= f.password_field :password, class:"form-control", placeholder: "Your Password *" %>
                        </div>
                    </div>
                      
                    
                    <div class="form-group row justify-content-center">
                      <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class:"btnSubmit") %>
                    </div>
                    
                    
                  <% end %>
                  
                </div>
            </div>
        </div>
      </div>
    </div>
</div>
            
            
 