<div class="container ">
  <div class="row justify-content-center">
    <div class="col-md-6 login-form-1">   
       <h3>Login</h3>
       <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
          </div>
          <div class="form-group">
              <input type="submit" class="btnSubmit" value="Login"> </input>
          </div>
          <div class="form-group">
              <a href="#" class="ForgetPwd">Forget Password?</a>
          </div>
      <% end %>
    </div>
  </div>
</div>
